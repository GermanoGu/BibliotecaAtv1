@model List<Usuario>
@{
    ViewData["Title"] = "Listagem de Usuários";
}
<h1>Usuários cadastrados no sistema</h1>
<div class="row">
    <div class="col-md-12">
        <table class="table table-striped"> 
            <thead>
                <th>Nome</th>
                <th>Login</th>
                <th>Tipo</th>
                <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach(Usuario usr in Model)
                {
                <tr>
                    <td>@usr.Nome</td>
                    <td>@usr.Login</td>
                    @if(usr.Tipo == Usuario.ADMIN){
                        <td>Administrador</td>
                    }else{
                        <td>Padrão</td>
                    }
                    <td><a href="/Usuario/AtualizaUser/@usr.Id">Editar</a></td>
                    <td><a href="/Usuario/ExcluirUser/@usr.Id">Excluir</a></td>
                </tr>
                }
            </tbody>
        </table>        
        <a href="InserirUser">Cadastrar novo usuário</a>
    </div>
</div>